<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep9.clinic.controller.LoginFormController">
   <children>
      <Label layoutX="70.0" layoutY="57.0" text="Log in to Open Source Medical Clinic">
         <font>
            <Font name="DejaVu LGC Serif Bold" size="22.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" layoutX="154.0" layoutY="164.0" spacing="30.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
         <children>
            <JFXTextField fx:id="txtUserName" labelFloat="true" prefHeight="29.0" prefWidth="264.0" promptText="Username">
               <font>
                  <Font name="DejaVu Sans Condensed Bold" size="16.0" />
               </font>
            </JFXTextField>
            <JFXPasswordField fx:id="txtPassword" promptText="Password">
               <font>
                  <Font name="DejaVu LGC Sans Condensed Bold" size="16.0" />
               </font>
            </JFXPasswordField>
         </children>
      </VBox>
      <JFXButton fx:id="btnLogin" layoutX="249.0" layoutY="328.0" onAction="#btnLoginOnAction" prefHeight="65.0" prefWidth="103.0" style="-fx-background-color: #a95cb1;" styleClass="btn" text="LOGIN" textFill="WHITE">
         <font>
            <Font name="DejaVu LGC Sans Mono Bold" size="20.0" />
         </font>
      </JFXButton>
   </children>
</AnchorPane>
